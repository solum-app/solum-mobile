<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Solum.Pages.LoginPage"
             Title="Login">

	<StackLayout VerticalOptions="Center">
		<Entry x:Name="UsernameEntry" Placeholder="Usuário" Text="{Binding Username}" />
		<Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True" Text="{Binding Password}" />
		<Button x:Name="EntrarButton" Text="Entrar" Command="{Binding LoginCommand}" />
		<Button x:Name="CadastrarButton" Text="Cadastrar" Command="{Binding CadastrarCommand}" />
    <ActivityIndicator IsRunning="{Binding InLogin}"/>
    <Label x:Name="AvisoLabel" Text="{Binding Aviso}" IsVisible="{Binding IsAvisoVisible}"/>
	</StackLayout>

</ContentPage>