<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:handlers="clr-namespace:Solum.Handlers"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Solum.Pages.RecomendacaoCalagemPage"
    Title="{Binding PageTitle}">
    <ScrollView BackgroundColor="{StaticResource colorBackground}">
        <StackLayout Spacing="0">
            <Label Style="{StaticResource headerStyle}"
                Text="INFORMAÇÕES PARA CALAGEM"/>
            <Grid BackgroundColor="White"
                ColumnSpacing="0"
                HeightRequest="72"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <BoxView Style="{StaticResource separatorStyle}"
                    Grid.ColumnSpan="2"
                    VerticalOptions="Start"/>
                <Label Grid.Column="1"
                    Grid.Row="0"
                    Margin="0,8,0,0"
                    Text="V2"
                    TextColor="{StaticResource colorTextPrimary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
                <Label Grid.Column="1"
                    Grid.Row="1"
                    Margin="0,0,0,8"
                    Text="{Binding V2, StringFormat='{0} %'}"
                    TextColor="{StaticResource colorTextSecundary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
                <BoxView Style="{StaticResource separatorStyle}"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalOptions="End"/>
            </Grid>
            <Grid BackgroundColor="White"
                ColumnSpacing="0"
                HeightRequest="72"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="1"
                    Grid.Row="0"
                    Margin="0,8,0,0"
                    Text="PRNT"
                    TextColor="{StaticResource colorTextPrimary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
                <Label Grid.Column="1"
                    Grid.Row="1"
                    Margin="0,0,0,8"
                    Text="{Binding Prnt, StringFormat='{0} %'}"
                    TextColor="{StaticResource colorTextSecundary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
                <BoxView Style="{StaticResource separatorStyle}"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalOptions="End"/>
            </Grid>
            <Grid BackgroundColor="White"
                ColumnSpacing="0"
                HeightRequest="72"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="1"
                    Grid.Row="0"
                    Margin="0,8,0,0"
                    Text="Profundidade"
                    TextColor="{StaticResource colorTextPrimary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
                <Label Grid.Column="1"
                    Grid.Row="1"
                    Margin="0,0,0,8"
                    Text="{Binding Profundidade, StringFormat='{0} cm'}"
                    TextColor="{StaticResource colorTextSecundary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
            </Grid>
            <BoxView Style="{StaticResource separatorStyle}"
                VerticalOptions="End"/>
            <Label Style="{StaticResource headerStyle}"
                Text="RECOMENDAÇÃO CALAGEM"/>
            <Grid BackgroundColor="White"
                ColumnSpacing="0"
                HeightRequest="72"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <BoxView Style="{StaticResource separatorStyle}"
                    Grid.ColumnSpan="2"
                    VerticalOptions="Start"/>
                <Label Grid.Column="1"
                    Grid.Row="0"
                    Margin="0,8,0,0"
                    Text="Quantidade de Calagem"
                    TextColor="{StaticResource colorTextPrimary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
                <Label Grid.Column="1"
                    Grid.Row="1"
                    Margin="0,0,0,8"
                    Text="{Binding QuantidadeCal, StringFormat='{0:0.##} t/ha'}"
                    TextColor="{StaticResource colorTextSecundary}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"/>
            </Grid>
            <BoxView Style="{StaticResource separatorStyle}"
                VerticalOptions="End"/>
            <Button BackgroundColor="{StaticResource colorAccent}"
                Command="{Binding SalvarCommand}"
                IsVisible="{Binding EnableButton}"
                Margin="16"
                Text="Salvar"
                IsEnabled="{Binding IsBusy, Converter={x:Static handlers:IverseBoolConverter.Instance}}"
                TextColor="{StaticResource colorTextPrimary}"
                VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ScrollView>
</ContentPage>