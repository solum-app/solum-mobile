						<OnPlatform x:TypeArguments="x:Double"
							iOS="0.5"
							Android="0.3"/>
					</BoxView.HeightRequest>
				</BoxView>
			</Grid>
			<Grid HeightRequest="45" BackgroundColor="White" ColumnSpacing="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="16"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Label Text="Mat. Org." VerticalOptions="Center" Grid.Column="1" TextColor="Black"/>
				<Entry x:Name="moEntry" Text="{Binding MateriaOrganicaEntry}" Keyboard="Numeric" VerticalOptions="Center" Grid.Column="2" Margin="16,0" Placeholder="Matéria Orgânica" HorizontalTextAlignment="End">
					<Entry.Effects>
				        <effects:NoBorderEffect />
				    </Entry.Effects>
					<Entry.FontSize>
						<OnPlatform x:TypeArguments="x:Double"
							iOS="17"
							Android="14"/>
					</Entry.FontSize>
				</Entry>
			</Grid>
			<BoxView BackgroundColor="#C8C7CC" VerticalOptions="End">
				<BoxView.HeightRequest>
					<OnPlatform x:TypeArguments="x:Double"
