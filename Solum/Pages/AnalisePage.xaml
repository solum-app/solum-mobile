					Keyboard="Numeric"
					VerticalOptions="Center"
					Grid.Column="2"
					Margin="16,0"
					Placeholder="Fósforo (mg dm⁻³)"
					HorizontalTextAlignment="End"
					PlaceholderColor="{StaticResource colorTextHint}"
          Completed="FosforoEntryOnCompleted">

					<Entry.Effects>
