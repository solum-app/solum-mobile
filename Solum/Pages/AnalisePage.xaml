					<Entry.Effects>
				        <effects:NoBorderEffect />
				    </Entry.Effects>
					<Entry.FontSize>
						<OnPlatform x:TypeArguments="x:Double"
							iOS="17"
							Android="14"/>
					</Entry.FontSize>
				</Entry>
				<BoxView BackgroundColor="#C8C7CC" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="End">
					<BoxView.HeightRequest>
						<OnPlatform x:TypeArguments="x:Double"
							iOS="0.5"
							Android="0.3"/>
					</BoxView.HeightRequest>
				</BoxView>
			</Grid>
			<Grid HeightRequest="45" BackgroundColor="White" ColumnSpacing="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="16"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Label Text="Data" VerticalOptions="Center" Grid.Column="1" TextColor="Black"/>
				<renderers:BindableDatePicker x:Name="datePicker" Date="{Binding DataEntry}" DateSelectedCommand="{Binding DateSelectedCommand}" Grid.Column="2" VerticalOptions="Center" HorizontalOptions="EndAndExpand" Margin="16,0">
					<DatePicker.Format>dd/MM/yyyy</DatePicker.Format>
					<DatePicker.Effects>
				        <effects:NoBorderEffect/>
						<effects:TextSizeEffect TextSize="14"/>
				    </DatePicker.Effects>
				</renderers:BindableDatePicker>
			</Grid>
			<BoxView BackgroundColor="#C8C7CC" VerticalOptions="End">
				<BoxView.HeightRequest>
					<OnPlatform x:TypeArguments="x:Double"
						iOS="0.5"
						Android="0"/>
				</BoxView.HeightRequest>
			</BoxView>

			<Label TextColor="#717175">
				<Label.Margin>
					<OnPlatform x:TypeArguments="Thickness"
						iOS="16,24,16,4"
						Android="16, 13"/>
				</Label.Margin>
				<Label.Text>
					<OnPlatform x:TypeArguments="x:String"
						iOS="ANÁLISE QUÍMICA"
