			<Grid HeightRequest="45" BackgroundColor="White" ColumnSpacing="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="16"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Label Text="H" VerticalOptions="Center" Grid.Column="1" TextColor="Black"/>
				<Entry x:Name="hEntry" Text="{Binding HEntry}" Keyboard="Numeric" VerticalOptions="Center" Grid.Column="2" Margin="16,0" Placeholder="Hidrogênio" HorizontalTextAlignment="End">
					<Entry.Effects>
				        <effects:NoBorderEffect />
				    </Entry.Effects>
