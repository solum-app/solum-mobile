			<Button Text="Interpretar" IsEnabled="true" Command="{Binding ButtonClickedCommand}" Margin="16"
				BackgroundColor="{StaticResource colorAccent}" TextColor="{StaticResource colorTextPrimary}" />
			<BoxView x:Name="boxSpacing" HeightRequest="205" IsVisible="false" />
		</StackLayout>
	</ScrollView>
</ContentPage>