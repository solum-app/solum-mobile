					</BoxView.HeightRequest>
				</BoxView>
				<Label Text="Areia" VerticalOptions="Center" Grid.Column="1" TextColor="Black"/>
				<Entry x:Name="areiaEntry" Text="{Binding AreiaEntry}" Keyboard="Numeric" VerticalOptions="Center" Grid.Column="2" Margin="16,0" Placeholder="Areia" HorizontalTextAlignment="End">
