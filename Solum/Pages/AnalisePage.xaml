					VerticalOptions="Center"
					Grid.Column="2"
					Margin="16,0"
					Placeholder="Potássio (mg dm⁻³)"
					HorizontalTextAlignment="End"
					PlaceholderColor="{StaticResource colorTextHint}">

					<Entry.Effects>
