			<Grid HeightRequest="45" BackgroundColor="White" ColumnSpacing="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="16" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label Text="Silte" VerticalOptions="Center" Grid.Column="1" TextColor="{StaticResource colorTextPrimary}" />
				<Entry
					x:Name="sliteEntry"
					Unfocused="OnEntryUnfocused"
					Focused="OnEntryFocused"
					Text="{Binding SilteEntry}"
					Keyboard="Numeric"
					VerticalOptions="Center"
					Grid.Column="2" Margin="16,0"
					Placeholder="Silte (g kg⁻¹)"
					HorizontalTextAlignment="End"
					PlaceholderColor="{StaticResource colorTextHint}">

					<Entry.Effects>
						<effects:NoBorderEffect />
