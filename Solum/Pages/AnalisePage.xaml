							    iOS="17"
							    Android="14" />
					</Entry.FontSize>
				</Entry>
				<BoxView BackgroundColor="{StaticResource colorSeparator}" Grid.Column="1" Grid.ColumnSpan="2"
					 VerticalOptions="End">
					<BoxView.HeightRequest>
						<OnPlatform x:TypeArguments="x:Double"
							    iOS="0.5"
							    Android="0.3" />
					</BoxView.HeightRequest>
				</BoxView>
			</Grid>
			<Grid HeightRequest="45" BackgroundColor="White" ColumnSpacing="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="16" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label Text="Al" VerticalOptions="Center" Grid.Column="1" TextColor="{StaticResource colorTextPrimary}" />
				<Entry 
          x:Name="AluminioEntry"
					Unfocused="OnEntryUnfocused"
					Focused="OnEntryFocused"
					Text="{Binding Aluminio}"
					Keyboard="Numeric"
					VerticalOptions="Center"
					Grid.Column="2" Margin="16,0"
					Placeholder="Alumínio (cmolc dm⁻³)"
					HorizontalTextAlignment="End"
					PlaceholderColor="{StaticResource colorTextHint}"
          Completed="AluminioEntryOnCompleted">

					<Entry.Effects>
